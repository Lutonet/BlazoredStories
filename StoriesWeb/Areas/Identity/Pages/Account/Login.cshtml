@page
@using Microsoft.Extensions.Localization;
@model LoginModel
@inject IStringLocalizer<LoginModel> t;

@{
    ViewData["Title"] = t["Login"];
}
@if(Model.DarkTheme)
{
  <style>
      body {
          background-color: black;
          color: white;
      }
      label{
          color: white;
      }

    .form-control {
      background-color: #222222;
      color: #DADADA;
    }

      .form-control:disabled {
        background-color: #050505;
        color: gray;
      }

    .input-group-text {
      background-color: #222222;
      color: #DADADA;
    }

    .form-control:valid {
      background-color: #222222;
      color: #DADADA;
    }

    .form-control:active {
      background-color: #220000;
      color: gray;
    }

    .form-control:hover {
      background-color: #220000;
    }

    .form-control:focus {
      background-color: #220000;
      color: #DADADA;
    }

    input {
      -webkit-tap-highlight-color: #cccccc;
    }

      input:-webkit-autofill,
      input:-webkit-autofill:hover,
      input:-webkit-autofill:focus,
      input:-webkit-autofill:active {
        background-color: #222222, !important;
        color: #DADADA !important;
        -webkit-text-fill-color: #DADADA !important;
        transition: background-color 1s ease-in-out 5000s !important;
      }
      
  </style>
}
<div class="row mt-3">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
<h5>@ViewData["Title"]</h5>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                 <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">@t["Email"]</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">@t["Password"]</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @t["Remember me"]
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@t["Login"]</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" href="/ForgotPassword">@t["I forgot the password"]</a>
                    </p>
                    <p>
                        <a href="/Register">@t["Register"]</a>
                    </p>
                    <p>
                <a id="resend-confirmation" href="/ResendEmailConfirmation">@t["Resend Activation Email"]</a>
                    </p>
                    
                </div>
            </form>
        </section>
    </div>
</div>
    </div>
    <div class="col-sm-1">

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
